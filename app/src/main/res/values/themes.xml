<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pinky</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/red_brown</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/MyAppBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:itemBackground">@color/pinky</item>
    </style>

    <style name="MyAppBar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/red_brown</item>
        <item name="fontFamily">cursive</item>
    </style>

    <style name="MyActionBar" parent="Widget.MaterialComponents.ActionBar.Primary" >
        <item name="titleTextColor">@color/black</item>
    </style>



</resources>